#include<iostream>
#include<conio.h>
using namespace std;

int main()
{
	int maxprocess,temp,j;
	int process[50];
	cout<<"Enter the total number of process you want to enter :";
	cin>>maxprocess;
	for(int i=0;i<maxprocess;i++)
	{
		cout<<"Enter execution time of process "<<i+1<<" :";
		cin>>process[i];
	}
	
	for(int i=0;i<maxprocess;i++)
	{
		cout<<"\nExecution time of process "<<i+1<<" is :";
		cout<<process[i];
	}
	
	cout<<"\nArranging the process in ascending order of execution time";
	for(int i=1;i<maxprocess;i++)
	{
	  for( j=0;j<maxprocess;j++)
	  {
		if(process[j]>process[j+1])
		{
		temp=process[j];
		process[j]= process[j+1];
		process[j+1]=temp;
	    }
	  }
	}
	cout<<"\nAfter arranging";
	for(int i=0;i<maxprocess;i++)
	{
		cout<<"\nExecution time of process "<<i+1<<" is :";
		cout<<process[i];
	}
}
