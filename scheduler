#include<iostream>
#include<conio.h>
using namespace std;

int main()
{
	int maxprocess,temp,j,i,pos;
	int process[50],index[50];
	cout<<"Enter the total number of process you want to enter :";
	cin>>maxprocess;
	for(int i=0;i<maxprocess;i++)
	{
		cout<<"Enter execution time of process "<<i<<" :";
		cin>>process[i];
		index[i]=i;
	}
	
	for(int i=0;i<maxprocess;i++)
	{
		cout<<"\n\nExecution time of process "<<index[i]<<" is :"<<process[i];

	}
	
	cout<<"\n\nArranging the process in ascending order of execution time";
	
	
     for(i=0;i<maxprocess;i++)
    {
        pos=i;
        for(j=i+1;j<maxprocess;j++)
        {
            if(process[j]<process[pos])
                pos=j;
        }
 
        temp=process[i];
        process[i]=process[pos];
        process[pos]=temp;
 
        temp=index[i];
        index[i]=index[pos];
        index[pos]=temp;
    }
    
	cout<<"\n\nAfter arranging";
	for(int i=0;i<maxprocess;i++)
	{   
		cout<<"\nExecution time of process "<<index[i]<<" is :"<<process[i];
		
	}
	
}
